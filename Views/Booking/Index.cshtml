@model List<Booking>
@{
    var resources = ViewBag.Resources as List<Resource>;
    ViewData["Title"] = "Bookings";
}

<div class="container">
    <h2 class="section-title">Manage Bookings</h2>

    <form asp-action="Create" method="post" class="card card-body mb-3">
        <div class="row">
            <div class="col-md-3">
                <select name="ResourceId" class="form-select" required>
                    <option value="">Select Resource</option>
                    @foreach (var r in resources)
                    {
                        <option value="@r.Id">@r.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <input type="datetime-local" name="StartTime" class="form-control" required />
            </div>
            <div class="col-md-3">
                <input type="datetime-local" name="EndTime" class="form-control" required />
            </div>
            <div class="col-md-3">
                <input name="BookedBy" class="form-control" placeholder="Booked By" required />
            </div>
            <div class="col-md-12 mt-2">
                <input name="Purpose" class="form-control" placeholder="Purpose" required />
            </div>
            <div class="col-md-12 mt-2">
                <button type="submit" class="btn btn-primary">Add Booking</button>
            </div>
        </div>
    </form>

    <form method="get" class="row mb-4">
        <div class="col-md-4">
            <input name="searchName" class="form-control" placeholder="Search by resource name" value="@* @Request.Query["searchName"] *@" />
        </div>
        <div class="col-md-4">
            <input type="date" name="searchDate" class="form-control" value="@* @Request.Query["searchDate"] *@" />
        </div>
        <div class="col-md-4">
            <button class="btn btn-primary w-100">Filter</button>
        </div>
    </form>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Resource</th>
                <th>By</th>
                <th>Start</th>
                <th>End</th>
                <th>Purpose</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.Resource?.Name</td>
                    <td>@b.BookedBy</td>
                    <td>@b.StartTime.ToString("g")</td>
                    <td>@b.EndTime.ToString("g")</td>
                    <td>@b.Purpose</td>
                    <td>
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@b.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

