@model List<Resource>
@{
    ViewData["Title"] = "Resources";
}

<div class="container">
    <h2 class="section-title">Manage Resources</h2>

    <form asp-action="Create" method="post" class="card card-body mb-3">
        <div class="row">
            <div class="col-md-3">
                <input name="Name" class="form-control" placeholder="Name" required />
            </div>
            <div class="col-md-3">
                <input name="Location" class="form-control" placeholder="Location" />
            </div>
            <div class="col-md-2">
                <input name="Capacity" type="number" class="form-control" placeholder="Capacity" />
            </div>
            <div class="col-md-2">
                <select name="IsAvailable" class="form-select">
                    <option value="true">Available</option>
                    <option value="false">Unavailable</option>
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary w-100">Add Resource</button>
            </div>
        </div>
    </form>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th><th>Location</th><th>Capacity</th><th>Available</th><th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var r in Model)
        {
                <tr>
                    <form asp-action="Edit" method="post" class="w-100">
                    <td>
                        <input type="hidden" name="Id" value="@r.Id" />
                        <input name="Name" value="@r.Name" class="form-control form-control-sm" />
                    </td>
                    <td>
                        <input name="Location" value="@r.Location" class="form-control form-control-sm" />
                    </td>
                    <td>
                        <input name="Capacity" value="@r.Capacity" type="number" class="form-control form-control-sm" />
                    </td>
                    <td>
                        <select name="IsAvailable" class="form-select form-select-sm">
                            <option value="true" selected="@r.IsAvailable">Yes</option>
                            <option value="false" selected="!@r.IsAvailable">No</option>
                        </select>
                    </td>
                    <td class="d-flex gap-2 align-items-center">
                        <button type="submit" name="action" value="save" class="btn btn-sm btn-success">Save</button>
                        <button type="submit" name="action" value="delete" class="btn btn-sm btn-danger">Delete</button>
                    </td>
                    </form>
                </tr>

        }
        </tbody>
    </table>
</div>
